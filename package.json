{
  "name": "doc-check",
  "description": "Automatic Documentation Consistency Checker",
  "version": "0.0.0",
  "module": "index.ts",
  "type": "module",
  "author": "Alex Vukadinov",
  "homepage": "https://github.com/alexvuka1/doc-check",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexvuka1/doc-check.git"
  },
  "bugs": {
    "url": "https://github.com/alexvuka1/doc-check/issues"
  },
  "keywords": [
    "actions",
    "documentation",
    "consistency",
    "checker"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "bundle": "bun run format:write && bun run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "bunx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "bun run package -- --watch",
    "test": "jest",
    "all": "bun run format:write && bun run lint && bun run test && bun run package"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
